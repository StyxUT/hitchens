<h1>Virus Characteristics</h1>

<table>
  <tr>
    <th>Characteristic</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @characteristics.each do |characteristic| %>
  <tr>
    <td><%= characteristic.characteristic %></td>
    <td class="left"><%= characteristic.description %></td>
    <td><%= link_to_icon 'Show', characteristic %></td>
    <td><%= link_to_icon 'Edit', edit_characteristic_path(characteristic) %></td>
    <td><%= link_to_icon 'Destroy', characteristic, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>
<br />
